//MODULO//////////////////////////////////////////////////////
module	mux81_if	(i,s,x);
	//PUERTOS
	//sentido	tipo	tama単o	nombre
	input					[7:0] 	i;
	input					[2:0]		s;
	output		reg				x;
	
	
	//ALAMBRES Y REGISTROS
	//tipo				tama単o	nombre

//ASIGNACIONES////////////////////////////////////////////////
	//se単ales
	//assign	se単al=valor/operacion
	
	//secuenciales
	
		//Condicional if
		
	always@(s)
	begin
	
		if(s==0)
			x=i[0];
		
		else if(s==1)
					x=i[1];
		
				else if(s==2)
						x=i[2];
		
						else if(s==3)
								x=i[3];
		
								else if(s==4)
										x=i[4];
		
										else if(s==5)
												x=i[5];
		
												else if(s==6)
														x=i[6];
		
														else if(s==7)
																x=i[7];
	
	end
	
endmodule